{
  "name": "kizofa-monorepo",
  "version": "1.0.0",
  "description": "Kizofa P2P Shipping Platform Monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "backend:dev": "cd apps/backend && npm run start:dev",
    "backend:start": "cd apps/backend && npm run start",
    "backend:build": "cd apps/backend && npm run build",
    "mobile:start": "cd apps/mobile && npm run start",
    "admin:start": "cd apps/admin && npm run start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "joi": "^17.13.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
